<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AuthentificationClientExistant</filter-name>
        <filter-class>Filtres.AuthentificationClientExistant</filter-class>
        <init-param>
            <param-name>AuthentificationClientExistant</param-name>
            <param-value>/ControlClient</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>AuthentificationNouveauClient</filter-name>
        <filter-class>Filtres.AuthentificationNouveauClient</filter-class>
        <init-param>
            <param-name>AuthentificationNouveauClient</param-name>
            <param-value>/*</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthentificationNouveauClient</filter-name>
        <url-pattern>/CreationClient</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthentificationClientExistant</filter-name>
        <url-pattern>/ControlClient</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>control</servlet-name>
        <servlet-class>control</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>detailProduit</servlet-name>
        <servlet-class>CONTROL.detailProduit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControPanier</servlet-name>
        <servlet-class>CONTROL.ControPanier</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreationClient</servlet-name>
        <servlet-class>CONTROL.CreationClient</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlClient</servlet-name>
        <servlet-class>CONTROL.ControlClient</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>init</servlet-name>
        <servlet-class>CONTROL.init</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangementLangue</servlet-name>
        <servlet-class>CONTROL.ChangementLangue</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>detailProduit</servlet-name>
        <url-pattern>/detailProduit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControPanier</servlet-name>
        <url-pattern>/ControPanier</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreationClient</servlet-name>
        <url-pattern>/CreationClient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlClient</servlet-name>
        <url-pattern>/ControlClient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>init</servlet-name>
        <url-pattern>/init</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangementLangue</servlet-name>
        <url-pattern>/ChangementLangue</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
